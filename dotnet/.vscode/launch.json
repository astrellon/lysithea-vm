    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Perf Test",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-perf-test",
            "program": "${workspaceFolder}/Examples/PerfTest/bin/Debug/net6.0/perfTest.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Examples/PerfTest",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Run Dialogue Tree",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-diag-tree",
            "program": "${workspaceFolder}/Examples/DialogueTree/bin/Debug/net6.0/dialogueTree.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Examples/DialogueTree",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": "Run Standard Library",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-standard-library",
            "program": "${workspaceFolder}/Examples/StandardLibraryTest/bin/Debug/net6.0/standardLibrary.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Examples/StandardLibraryTest",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Run More Complex Program",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-more-complex-program",
            "program": "${workspaceFolder}/Examples/MoreComplexTypes/bin/Debug/net6.0/moreComplexTypes.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Examples/MoreComplexTypes",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Run Snapshot Program",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-snapshot-program",
            "program": "${workspaceFolder}/Examples/Snapshot/bin/Debug/net6.0/snapshot.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Examples/Snapshot",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Run Standalone",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-standalone",
            "program": "${workspaceFolder}/Examples/Standalone/bin/Debug/net6.0/standalone.dll",
            "args": ["./testReturn.lys"],
            "cwd": "${workspaceFolder}/Examples/Standalone",
            "console": "internalConsole",
