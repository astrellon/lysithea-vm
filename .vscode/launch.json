    "version": "0.2.0",
    "configurations": [
        {
            "name": "TS-Node",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceRoot}/ts/node_modules/.bin/ts-node",
            "runtimeArgs": [
              "--transpile-only",
            ],
            "program": "${file}",
            "cwd": "${workspaceRoot}/ts",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": ["<node_internals>/**", "node_modules/**"]
        },
        {
            "name": "C# More Complex Example",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/dotnet/Examples/MoreComplexTypes/moreComplexTypes.csproj"
        }
    ]
}